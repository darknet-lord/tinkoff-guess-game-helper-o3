<CustLabel@Label>:
    color: .761, .190, .810, 1

<Letter>:
    halign: "center"
    background_color: 0.5, 0.5, 0.5, 1
    font_size: 30
    size_hint: (1, 2)
    height: 30

<ColorButton>:
    size_hint: (5, 1)
    height: 5
    font_size: 10 

<LetterGroup@BoxLayout>:
    orientation: "vertical"
    size_hint: (1, 1)
    height: 10

    Letter:
        id: letter

    BoxLayout:
        orientation: "horizontal"

        ColorButton:
            text: "G"
            id: grey
            group: "color_group" + str(self.parent.uid)
            on_press: self.change_color("grey")

        ColorButton:
            text: "Y"
            id: yellow
            group: "color_group" + str(self.parent.uid)
            on_press: self.change_color("yellow")

        ColorButton:
            text: "W"
            id: white
            group: "color_group" + str(self.parent.uid)
            on_press: self.change_color("white")

<WordGroup@BoxLayout>:
    id: word_group
    orientation: "horizontal"
    size_hint: (1, .9)
    padding: 10
    canvas:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            size: self.size
            pos: self.pos
    LetterGroup:
        id: l0
    LetterGroup:
        id: l1
    LetterGroup:
        id: l2
    LetterGroup:
        id: l3
    LetterGroup:
        id: l4

<MainWindow>:
    BoxLayout:
        orientation: "vertical"
        WordGroup:
            id: w0
        WordGroup:
            id: w1
        WordGroup:
            id: w2
        WordGroup:
            id: w3
        WordGroup:
            id: w4
        WordGroup:
            id: w5
        SuggestButton:
            text: "Suggest"
            on_press: self.suggest_words()
            size_hint: 1, 1

<SuggestWordsWindow>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            id: suggested_words
        Button:
            size_hint: 1, 0.2
            on_press: self.parent.parent.apply_suggestions()
            text: "Apply"
